{
  "name": "typescript-react-jsx-init",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "webpack-dev-server",
    "start:open": "webpack-dev-server --open",
    "test": "mocha tests/**/*.test.ts --opts ./mocha.opts",
    "test:coverage": "nyc mocha tests/**/*.test.ts --opts ./mocha.opts",
    "test:coverage:html": "nyc --reporter=html mocha tests/**/*.test.ts --opts ./mocha.opts && open .coverage/index.html"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/mocha": "^5.0.0",
    "@types/node": "^11.0.0",
    "@types/react": "^16.0.0",
    "@types/react-dom": "^16.0.0",
    "mocha": "^6.0.0",
    "nyc": "^14.0.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "source-map-support": "^0.5.4",
    "ts-node": "^8.0.0",
    "tslint": "^5.8.0",
    "tslint-loader": "^3.3.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.0.0",
    "webpack": "^4.0.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.0.0"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "include": [
      "src/**"
    ],
    "reporter": [
      "text-summary"
    ],
    "report-dir": "./.coverage",
    "all": true
  },
  "dependencies": {
    "awesome-typescript-loader": "^5.2.1"
  }
}
